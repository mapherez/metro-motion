{
  "name": "@metro/frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "pnpm -w -r --filter @metro/shared-types --filter @metro/station-data build",
    "build": "tsc -b && vite build",
    "preview": "vite preview --port 5174",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix --cache",
    "stylecheck": "stylelint \"src/**/*.{css,scss}\" --max-warnings 0",
    "stylefix": "stylelint \"src/**/*.{css,scss}\" --fix --cache",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:watch": "tsc -p tsconfig.json --noEmit -w",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@metro/shared-types": "workspace:*",
    "@metro/shared-utils": "workspace:*",
    "@metro/station-data": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.4.0",
    "vite": "^5.3.1",
    "vite-plugin-qrcode": "^0.3.0"
  }
}