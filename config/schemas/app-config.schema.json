{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "App Settings Overrides",
  "type": "object",
  "properties": {
    "defaultLocale": { "type": "string" },
    "supportedLocales": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "theme": { "type": "string" },
    "featureFlags": {
      "type": "object",
      "additionalProperties": { "type": "boolean" }
    },
    "routes": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "ui": { "type": "object" }
  },
  "additionalProperties": true
}