{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Locale Namespace",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" }
  },
  "patternProperties": {
    "^[A-Za-z0-9_.-]+$": {
      "anyOf": [
        { "type": "string" },
        { "$ref": "#" },
        {
          "type": "array",
          "items": { "type": ["string", "object", "number", "boolean"] }
        }
      ]
    }
  },
  "additionalProperties": false
}
